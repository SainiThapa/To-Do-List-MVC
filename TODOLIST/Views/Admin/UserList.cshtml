@model IEnumerable<TODOLIST.Models.ApplicationUser>

<div class="container mt-5">
    <h2 class="text-center mb-4">User List</h2>

    <form asp-action="DeleteUsers" asp-controller="Admin" method="post">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><input type="checkbox" onclick="checkAll(this)" /></th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="userIds" value="@user.Id" /></td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <a href="@Url.Action("UserTasks", "Admin", new { userId = user.Id })" class="btn btn-primary btn-sm">
                                <i class="bi bi-list-check"></i> View Tasks
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-danger btn-sm">
            <i class="bi bi-trash"></i> Delete Selected Users
        </button>

    <a href="@Url.Action("AddUser", "Admin")" class="btn btn-info btn-sm">
        <i class="bi bi-person-plus-fill"></i> Add New User
    </a>
    </form>
    <br>
    <a href="@Url.Action("DownloadUserTasksSummary", "Admin")" class="btn btn-success btn-sm">
        <i class="bi bi-download"></i> Download User Report
    </a>
    <a href="@Url.Action("DownloadAllTasksWithOwners", "Admin")" class="btn btn-warning btn-sm">
        <i class="bi bi-download"></i> Download Tasks Report
    </a>
</div>

<script>
    function checkAll(box) {
        let checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach(checkbox => {
            checkbox.checked = box.checked;
        });
    }
</script>

<style>
    .container {
        max-width: 800px;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .table thead {
        background-color: #343a40;
        color: #fff;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        box-shadow: 0px 4px 8px rgba(0, 123, 255, 0.4);
    }

    .text-center {
        color: #343a40;
        font-weight: 600;
    }
</style>
